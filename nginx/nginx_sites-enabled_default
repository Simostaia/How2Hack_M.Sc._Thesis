server {
    server_name how2hack.it www.how2hack.it;

    location = /favicon.ico { access_log off; log_not_found off; }
    #location /static/ {
    #    root /home/ubuntu/pw2021_gruppo4/staticfiles;
    #}
    
    location / {
       # proxy_pass http://unix:/run/gunicorn.sock;
       proxy_pass http://127.0.0.1:8000;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/how2hack.it/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/how2hack.it/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.how2hack.it) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = how2hack.it) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name how2hack.it www.how2hack.it;
    return 404; # managed by Certbot




}
